{{#partial "content"}}
  <div class="container bg-secondary">
    <div class="row container">
      <div class="col-md-6">
        {{#if squads}}
          {{#each squads}}
             <p>{{name}}</p>
{{!--              <p>{{leader}}</p> --}}
{{!--              <p>{{mission}}</p> --}}
{{!--              <p>{{id}}</p> --}}
{{!--              <p>{{maximumSize}}</p> --}}
             <a href="/squad-view/{{id}}"><button class="btn btn-info btn-md">Details</button></a>
             <hr>
          {{/each}}
        {{else}}
            <hr>
            <p>There are no squads here.</p>
            <a href="/hero-form"><button class="btn btn-success btn-md">Create Your Squad!</button></a>
            <hr>
        {{/if}}

      </div>

{{!-- particular details --}}
      <div class="col-md-6 ">
        <br>
          {{#if squad}}
            <div class =" container card bg-success" >
                <div class="card-body">
                    <hr>
                    <p class="text-light">Name : {{squad.name}}</p>
                    <hr>
                    <p class="text-light">Leader : {{squad.leader}}</p>
                    <p class="text-light">Mission : {{squad.mission}}</p>
                    <p class="text-light">Maximum size : {{squad.maximumSize}}</p>
                    <p class="text-light">Team Members : {{squad.teamMembers}}</p>
                    <a href="/#"><button class="btn btn-danger">Delete Squad</button></a>
                    <hr>
                </div>
            </div>
          {{/if}}
        <br>
      </div>
    </div>
 </div>
{{/partial}}
{{#partial "footer"}}
    {{#if squads}}
        <hr>
        <a href="/squads/delete" style="margin: 1em;"><button class="btn btn-md btn-danger"> Delete All Squads</button></a>
    {{else}}
    {{/if}}
{{/partial}}
{{> layout.hbs}}